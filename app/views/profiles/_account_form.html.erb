<%= form_for user, url: user_registration_path(user) do |f| %>
  <div class="col-md-12">
    <div class="row">
      <div class="error_messages_container">
        <%= render "shared/error_messages", object: f.object %>
      </div>
      <div class="form-group">
        <%= f.label :email, t(".email") %>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password, t(".password") %>
        <%= f.text_field :password, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, t(".password_confirmation") %>
        <%= f.text_field :password_confirmation, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :current_password, t(".current_password") %>
        <%= f.text_field :current_password, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.button t(".btn_submit"), class: "btn btn-primary pull-right" %>
      </div>
    </div>
  </div>
<% end %>
