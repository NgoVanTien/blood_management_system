<div class="modal fade" id="login-modal" role="dialog">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t ".header" %></h4>
      </div>
      <%= form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
        <div class="modal-body login-body">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
            <%= f.email_field :email, autofocus: true, placeholder: t(".email"), class: "form-control" %>
          </div>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-key"></i></span>
            <%= f.password_field :password, autocomplete: "off", placeholder: t(".password"), class: "form-control" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="input-group">
              <%= f.check_box :remember_me %>&nbsp;
              <%= f.label t(".remember") %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
        <div class="modal-footer actions">
          <%= f.submit t(".submit"), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
