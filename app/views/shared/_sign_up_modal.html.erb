<div class="modal fade" id="sign-up-modal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t ".header" %></h4>
      </div>
      <%= form_for resource, as: resource_name, url: registration_path(resource_name), remote: true do |f| %>
        <div class="modal-body login-body">
          <div class="devise_error_messages">
            <%= devise_error_messages! %>
          </div>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
            <%= f.email_field :email, autofocus: true, placeholder: t(".email"), class: "form-control" %>
          </div>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-key"></i></span>
            <%= f.password_field :password, autocomplete: "off", placeholder: t(".password"), class: "form-control" %>
          </div>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-key"></i></span>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: t(".password_confirmation"), class: "form-control" %>
          </div>
          <%= render "devise/shared/links" %>
        </div>
        <div class="modal-footer actions">
          <%= f.submit t(".submit"), class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
